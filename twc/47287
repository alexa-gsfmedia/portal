                            <p className="text-gray-500 mb-8 italic text-lg leading-relaxed">{item.description}</p>
                            <div className="grid sm:grid-cols-2 gap-4 mb-8">
                                {item.items.map((sub, idx) => (
                                    <div key={idx} className="flex items-start gap-3 bg-gray-50 p-4 rounded-xl border border-gray-100 group-hover:bg-[#5b52a3]/5 transition-colors duration-300 hover:scale-[1.02]">
                                        <div className="mt-1.5 w-2 h-2 rounded-full bg-[#e8bf63] shrink-0" /><span className="text-sm text-gray-700 font-medium leading-tight">{sub}</span>
                                    </div>
                                ))}
                            </div>
                            <div className="relative rounded-2xl overflow-hidden aspect-[21/9] border border-gray-100 bg-black shadow-inner group/media cursor-pointer">
                                {item.placeholderVideo ? (
                                    <video className="w-full h-full object-cover opacity-80 group-hover/media:opacity-100 transition-opacity duration-500 group-hover/media:scale-105" autoPlay muted loop playsInline>
                                        <source src={item.placeholderVideo} type="video/mp4" />
                                    </video>
                                ) : (
                                    <img src={item.placeholderImg} alt={item.placeholderLabel} className="w-full h-full object-cover opacity-90 group-hover/media:opacity-100 transition-all duration-700 group-hover/media:scale-105" />
                                )}
                                <div className="absolute inset-0 bg-gradient-to-t from-black/80 via-transparent to-transparent opacity-60 group-hover/media:opacity-40 transition-opacity"></div>
                                <div className="absolute bottom-4 left-6 flex items-center gap-2 text-white">
                                    <div className="w-8 h-8 rounded-full bg-[#e8bf63] flex items-center justify-center text-[#5b52a3] shadow-lg group-hover/media:scale-110 transition-transform">
                                        {item.placeholderVideo ? <Icon name="Play" size={14} className="fill-current" /> : <Icon name="Image" size={14} />}
                                    </div>
                                    <span className="text-xs font-black uppercase tracking-widest drop-shadow-md translate-y-1 group-hover/media:translate-y-0 transition-transform">{item.placeholderLabel}</span>
