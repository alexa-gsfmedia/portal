        const FlexView = () => {
            const [hours, setHours] = useState(30);
            const hourlyRate = 150;
            const totalCost = hours * hourlyRate;

            const serviceMenu = [
                { name: "Strategy Dashboard", cost: 2, icon: "User" },
                { name: "Social Media Mgmt", cost: 13, icon: "Megaphone" },
                { name: "Digital Ad Mgmt", cost: 10, icon: "Monitor" },
                { name: "Website Maintenance", cost: 6, icon: "Globe" },
                { name: "Photography Session", cost: 4, icon: "Camera" },
                { name: "Video Project Base", cost: 20, icon: "Video" }
            ];

            const getAllocation = (availableHours) => {
                let remaining = availableHours;
                let allocatedItems = [];
                
                // Simple greedy allocation for demo purposes
                // We'll prioritize the "Core" services first
                const priorityOrder = [0, 1, 2, 4, 3, 5]; // Strategy, Social, Ads, Photo, Web, Video
                
                priorityOrder.forEach(index => {
                    const service = serviceMenu[index];
                    if (remaining >= service.cost) {
                        allocatedItems.push(service);
                        remaining -= service.cost;
                    }
                });

                return { items: allocatedItems, remaining };
            };

            const { items, remaining } = getAllocation(hours);

            return (
                <div className="space-y-16 animate-in fade-in slide-in-from-bottom-4 duration-700 max-w-6xl mx-auto text-center">
                    <div className="mb-12">
                        <div className="flex flex-col items-center gap-6 mb-4 animate-fade-in-down">
