                        </div>
                        {!isLast && <div className="h-12 w-full flex justify-center overflow-hidden relative"><div className="w-12 h-12 bg-white border-2 rounded-full absolute -bottom-6 border-gray-100 z-20"></div></div>}
                    </div>
                    {!isLast && <div className="h-20 w-1 bg-gradient-to-b from-gray-200 to-transparent"></div>}
                </div>
            );
        };

        const OutcomeVisualizer = ({ tier }) => {
            const isGrowth = tier === 'growth';
            const [mounted, setMounted] = useState(false);
            useEffect(() => { setMounted(true); }, []);

            return (
                <div className="bg-white rounded-2xl p-6 border border-gray-100 shadow-sm mt-6 text-left hover:shadow-md transition-shadow">
                    <h4 className="text-[10px] font-black uppercase tracking-[0.2em] text-gray-400 mb-6 flex items-center gap-2 text-left"><Icon name="BarChart3" size={12} /> Annual Content Output</h4>
                    <div className="space-y-6">
                        <div>
                            <div className="flex justify-between text-xs font-bold mb-2"><span>Video Production</span><span className={isGrowth ? 'text-[#5b52a3]' : 'text-gray-500'}>{isGrowth ? '6 Shoots / 4 Promos' : '3 Shoots / 2 Promos'}</span></div>
                            <div className="h-2 bg-gray-100 rounded-full overflow-hidden flex">
                                <div className={`h-full transition-all duration-1500 ease-out ${isGrowth ? 'bg-[#5b52a3]' : 'bg-gray-400'}`} style={{ width: mounted ? (isGrowth ? '100%' : '50%') : '0%' }}></div>
                            </div>
                        </div>
                        <div>
                            <div className="flex justify-between text-xs font-bold mb-2"><span>Cinematic Reels</span><span className={isGrowth ? 'text-[#5b52a3]' : 'text-gray-500'}>{isGrowth ? '48 Annually (4/mo)' : '24 Annually (2/mo)'}</span></div>
                            <div className="h-2 bg-gray-100 rounded-full overflow-hidden flex">
                                <div 
                                    className={`h-full transition-all duration-1500 ease-out delay-200 ${isGrowth ? 'bg-[#e8bf63]' : 'bg-gray-400'}`} 
                                    style={{ width: mounted ? (isGrowth ? '100%' : '50%') : '0%' }}
                                ></div>
                            </div>
                        </div>
                    </div>
                </div>
            );
        };

        const ImmediateWinsView = ({ onNext }) => {
            const [ref, isVisible] = useScrollReveal(0.1);
            const priorities = [
