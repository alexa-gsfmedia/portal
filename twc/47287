                                        step="5" 
                                        value={hours} 
                                        onChange={(e) => setHours(Number(e.target.value))}
                                        className="w-full h-4 bg-gray-700 rounded-full appearance-none cursor-pointer"
                                    />
                                    <div className="mt-8 flex flex-col items-center">
                                        <div className="text-[#e8bf63] font-black text-5xl mb-2">{hours} Hours</div>
                                        <div className="text-2xl text-white font-bold opacity-80">= ${totalCost.toLocaleString()}</div>
                                    </div>
                                </div>

                                <div className="bg-white/10 backdrop-blur-md rounded-3xl p-8 border border-white/10 text-left transition-all duration-500 ease-in-out">
                                    <div className="flex flex-col md:flex-row gap-8 items-start">
                                        <div className="w-16 h-16 bg-[#e8bf63] text-[#121212] rounded-2xl flex items-center justify-center shrink-0 shadow-lg">
                                            <Icon name="Layers" size={32} />
                                        </div>
                                        <div className="flex-1 w-full">
                                            <h4 className="text-2xl font-black text-white mb-6 uppercase">Example Allocation</h4>
                                            
                                            <div className="space-y-3 mb-6">
                                                {items.map((item, i) => (
                                                    <div key={i} className="flex items-center justify-between bg-black/40 p-4 rounded-xl border border-white/5">
                                                        <div className="flex items-center gap-3">
                                                            <Icon name={item.icon} size={18} className="text-[#e8bf63]" />
                                                            <span className="text-white font-bold">{item.name}</span>
                                                        </div>
                                                        <span className="text-white/60 font-mono text-sm">{item.cost} Hrs</span>
                                                    </div>
                                                ))}
                                                {remaining > 0 && (
                                                    <div className="flex items-center justify-between bg-[#5b52a3]/40 p-4 rounded-xl border border-[#5b52a3] border-dashed">
                                                        <div className="flex items-center gap-3">
                                                            <Icon name="Plus" size={18} className="text-white" />
                                                            <span className="text-white font-bold italic">Unallocated Flex Time</span>
                                                        </div>
                                                        <span className="text-white font-mono text-sm">{remaining} Hrs</span>
                                                    </div>
                                                )}
                                            </div>
                                            <p className="text-xs text-gray-400 text-center italic">* This is an example breakdown based on typical service times.</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div className="mt-16 animate-fade-in-up delay-500">
                         <h3 className="text-xl font-black text-[#121212] mb-8 uppercase tracking-widest">Typical Service Costs</h3>
                         <div className="grid grid-cols-1 md:grid-cols-3 gap-6 px-4 md:px-0">
                            {DELIVERABLES_DATA.map((item) => (
                                <div key={item.id} className="bg-white rounded-2xl shadow-xl border border-gray-100 overflow-hidden group hover:-translate-y-2 transition-all duration-300">
                                    <div className="h-32 w-full relative overflow-hidden">
                                        <img src={item.placeholderImg} className="w-full h-full object-cover group-hover:scale-110 transition-transform duration-700" alt={item.title} />
                                        <div className="absolute inset-0 bg-[#5b52a3]/20 group-hover:bg-transparent transition-colors"></div>
                                        <div className="absolute top-2 right-2 bg-white/90 backdrop-blur px-2 py-1 rounded-lg text-[10px] font-black uppercase tracking-widest text-[#5b52a3] flex items-center gap-1 shadow-sm"><Icon name="Clock" size={10} /> {item.flexEstimate}</div>
                                    </div>
                                    <div className="p-6 text-left">
                                        <div className="flex items-center gap-3 mb-2">
                                            <div className="w-8 h-8 bg-[#e8bf63]/20 text-[#e8bf63] rounded-full flex items-center justify-center"><Icon name={item.icon} size={16} /></div>
                                            <h4 className="font-black text-[#121212] text-sm uppercase">{item.pieceName}</h4>
                                        </div>
                                        <p className="text-xs text-gray-500 leading-relaxed mb-4 line-clamp-2">{item.description}</p>
                                    </div>
                                </div>
                            ))}
                        </div>
                    </div>
                </div>
            );
        };

        const App = () => {
            const [activeTab, setActiveTab] = useState('priorities');
            const [showMobileNotice, setShowMobileNotice] = useState(false);

            useEffect(() => {
                if (typeof window !== 'undefined' && window.innerWidth < 768) {
                    setShowMobileNotice(true);
                }
            }, []);

            return (
                <div className="min-h-screen font-sans text-[#121212] pb-20 overflow-x-hidden relative scroll-smooth">
                    {showMobileNotice && (
                        <div className="fixed inset-0 z-[200] flex items-center justify-center p-6 bg-black/60 backdrop-blur-md animate-in fade-in duration-500">
                            <div className="bg-white rounded-[2.5rem] p-10 max-w-sm w-full text-center shadow-[0_35px_60px_-15px_rgba(0,0,0,0.3)] border border-gray-100 flex flex-col items-center animate-scale-up">
                                <div className="w-16 h-16 bg-[#5b52a3]/10 text-[#5b52a3] rounded-2xl flex items-center justify-center mb-6">
                                    <Icon name="Monitor" size={32} strokeWidth={2} />
                                </div>
                                <h3 className="text-2xl font-black text-[#5b52a3] mb-4 font-['Inter'] leading-tight uppercase">Best if viewed on desktop!</h3>
                                <p className="text-gray-500 text-sm mb-8 leading-relaxed font-medium">This strategic roadmap contains cinematic content and detailed layouts best experienced on a larger screen.</p>
                                <button onClick={() => setShowMobileNotice(false)} className="w-full bg-[#5b52a3] text-white py-4 rounded-2xl font-black uppercase tracking-widest text-xs hover:bg-[#484084] transition-colors shadow-lg shadow-[#5b52a3]/20">Continue Anyway</button>
                            </div>
                        </div>
                    )}

                    <header className="bg-[#5b52a3] text-white shadow-xl sticky top-0 z-50 transition-all duration-300">
                        <div className="max-w-6xl mx-auto px-4 py-5 flex justify-between items-center text-white">
                            <GSFLogo src={GSF_HEADER_LOGO_URL} className="h-10 md:h-12 hover:scale-105 transition-transform cursor-pointer" />
                            <div className="flex items-center gap-4 text-white">
                                <div className="text-right hidden sm:block text-white animate-fade-in-down">
                                    <div className="text-[8px] font-black text-[#e8bf63] uppercase tracking-widest text-white text-right">Partnering with</div>
                                    <div className="text-[10px] font-black text-white uppercase tracking-tighter text-white text-right">{CLIENT_CONFIG.shortName}</div>
                                </div>
                                <ClientLogo className="h-10 border-white/10 animate-fade-in-down delay-100" />
                            </div>
                        </div>
                    </header>

                    <main className="max-w-6xl mx-auto px-4 py-10">
                        <div className="flex justify-center mb-16 animate-fade-in-down delay-200">
                            <div className="bg-white p-1.5 rounded-full shadow-lg border border-gray-200 inline-flex flex-wrap justify-center">
                                <button onClick={() => setActiveTab('priorities')} className={`flex items-center gap-2 px-6 py-3 rounded-full text-xs font-black uppercase tracking-widest transition-all font-['Inter'] ${activeTab === 'priorities' ? 'bg-[#5b52a3] text-white shadow-md' : 'text-gray-500 hover:text-[#5b52a3]'}`}><Icon name="ShieldCheck" size={14} /> Priorities</button>
                                <button onClick={() => setActiveTab('deliverables')} className={`flex items-center gap-2 px-6 py-3 rounded-full text-xs font-black uppercase tracking-widest transition-all font-['Inter'] ${activeTab === 'deliverables' ? 'bg-[#5b52a3] text-white shadow-md' : 'text-gray-500 hover:text-[#5b52a3]'}`}><Icon name="Layers" size={14} /> ROADMAP</button>
                                <button onClick={() => setActiveTab('investment')} className={`flex items-center gap-2 px-6 py-3 rounded-full text-xs font-black uppercase tracking-widest transition-all font-['Inter'] ${activeTab === 'investment' ? 'bg-[#5b52a3] text-white shadow-md' : 'text-gray-500 hover:text-[#5b52a3]'}`}><Icon name="Calculator" size={14} /> Investment</button>
                                <button onClick={() => setActiveTab('flex')} className={`flex items-center gap-2 px-6 py-3 rounded-full text-xs font-black uppercase tracking-widest transition-all font-['Inter'] ${activeTab === 'flex' ? 'bg-[#5b52a3] text-white shadow-md' : 'text-gray-500 hover:text-[#5b52a3]'}`}><Icon name="Briefcase" size={14} /> Flex</button>
                            </div>
                        </div>

                        <div className="transition-all duration-300">
                            {activeTab === 'priorities' && <ImmediateWinsView onNext={() => {setActiveTab('deliverables'); window.scrollTo(0,0);}} />}
                            {activeTab === 'deliverables' && <DeliverablesView onNext={() => {setActiveTab('investment'); window.scrollTo(0,0);}} />}
                            {activeTab === 'investment' && <PackageView />}
                            {activeTab === 'flex' && <FlexView />}
                        </div>

                        <div className="mt-20 border-t border-gray-200 pt-10 text-center text-gray-500 text-xs font-['Inter'] font-medium animate-fade-in-up">
                            <div className="flex flex-col items-center gap-4 mb-8 text-[#121212]">
                                <div className="flex items-center gap-6 grayscale opacity-50 hover:grayscale-0 hover:opacity-100 transition-all duration-500 text-[#121212] cursor-pointer">
                                    <GSFLogo src={GSF_FOOTER_LOGO_URL} className="h-6" />
                                    <div className="w-px h-4 bg-gray-300"></div>
                                    <ClientLogo className="h-6 border-gray-200" />
                                </div>
                            </div>
                            <p className="opacity-60 uppercase tracking-widest text-[10px] font-black text-center text-center text-[#121212]">Strategic Proposal • GSF Media x {CLIENT_CONFIG.shortName}</p>
                        </div>
                    </main>
                </div>
            );
        };

        const root = ReactDOM.createRoot(document.getElementById('root'));
        root.render(<App />);
    </script>
